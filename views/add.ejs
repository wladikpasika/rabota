<% layout('./layout') %>
<div class = "container">
    <div class = "row">
        <div class="col-md-6">
        </div>
        <h3>Добавить книгу</h3>
        <form action = "/book/create/" method = "POST" class="form-horizontal">
            <div class = "box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Заполните все поля</h3>
                </div>
                <div class = "box-body">
                    <div class="form-group">
                        <label for="title" class = "col-sm-2">Название книги</label>
                        <div class="col-sm-10">
                            <input type="text" name="title" placeholder="Название книги" id="title" class = "col-sm-8" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="title" class = "col-sm-2">Автор</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" placeholder="Автор" id ='author' class = "col-sm-8" required>
                        </div></div>
                    <div class="form-group">
                        <label for="title" class = "col-sm-2">Год издания</label>
                        <div class="col-sm-10">
                            <input type="number" name="year" placeholder="Год" id = "year" class = "col-sm-8" required>
                        </div></div>
                    <div class="form-group">
                        <input type="submit" class = "btn btn-success" value="Добавить Книгу">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>